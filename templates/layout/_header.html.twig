<header class="container" id="header">
    {% set currentRoute = app.request.attributes.get('_route') %}
    <nav class="header">
        <div class="logo-container {{ currentRoute == 'home' ? 'active' : '' }}">
            <a href="{{ path('home', {'_locale': app.request.locale}) }}">
                <img src="{{ asset('assets/images/logo/bazar.png') }}" alt="{{ site.name }}">
            </a>
        </div>
        <div class="navbar_menu">
            <div class="navbar_list_container">
                <ul class="navbar_list">
                    <li class="btn-menu-navbar {{ currentRoute == 'home' ? 'active' : '' }}">
                        <a href="{{ path('home', {'_locale': app.request.locale}) }}">
                            <span>{{ 'navbar.market'|trans }}</span>
                        </a>
                    </li>
                    <li class="btn-menu-navbar {{ currentRoute == 'contract' ? 'active' : '' }}">
                        <a href="{{ path('home', {'_locale': app.request.locale}) }}">
                            <span>{{ 'navbar.contract'|trans }}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="auth_zone">
            <ul class="auth_list">
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="btn-menu-navbar {{ currentRoute == 'admin' ? 'active' : '' }}">
                            <a href="{{ path('admin', {'_locale': app.request.locale}) }}">
                                <span>{{ 'admin'|trans }}</span>
                            </a>
                        </li>
                    {% endif %}
                    <li class="btn-menu-navbar">
                        <a href="{{ path('user', {id: app.user.id, '_locale': app.request.locale}) }}">
                            <span>{{ 'profile'|trans }}</span>
                        </a>
                    </li>
                    <li class="btn-menu-navbar">
                        <a href="{{ path('app_logout', {'_locale': app.request.locale}) }}">
                            <span>{{ 'logout'|trans }}</span>
                        </a>
                    </li>
                {% else %}
                    <li class="btn-menu-navbar {{ currentRoute == 'app_login' ? 'active' : '' }}">
                        <a href="{{ path('app_login', {'_locale': app.request.locale}) }}">
                            <span>{{ 'login'|trans }}</span>
                        </a>
                    </li>
                    <li class="btn-menu-navbar {{ currentRoute == 'create_user' ? 'active' : '' }}">
                        <a href="{{ path('create_user', {'_locale': app.request.locale}) }}">
                            <span>{{ 'registration'|trans }}</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <div class="navbar-dropdown-toggle" data-dropdown-target="#navbar-dropdown">
            <i class="fa-solid fa-bars"></i>
        </div>
        <div class="dropdown-navbar">
            <ul id="navbar-dropdown" class="dropdown-navbar-list">
                {% if app.user %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="btn-menu-navbar">
                            <a href="{{ path('admin', {'_locale': app.request.locale}) }}">
                                <span>admin</span>
                            </a>
                        </li>
                    {% endif %}
                    <li class="btn-menu-navbar">
                        <a href="{{ path('app_logout', {'_locale': app.request.locale}) }}">
                            <span>{{ 'logout'|trans }}</span>
                        </a>
                    </li>
                {% else %}
                    <li class="btn-menu-navbar">
                        <a href="{{ path('app_login', {'_locale': app.request.locale}) }}">
                            <span>{{ 'login'|trans }}</span>
                        </a>
                    </li>
                    <li class="btn-menu-navbar">
                        <a href="{{ path('create_user', {'_locale': app.request.locale}) }}">
                            <span>{{ 'registration'|trans }}</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>