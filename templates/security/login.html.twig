{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div id="form" class="form-background">
        <div class="form">
            <div class="form-content">
                <div class="mix">
                    <div class="headline">
                        <h3 class="text-headline">connexion</h3>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="alert alert-success">
                                <span>Vous √™tes connect√© en tant que {{ app.user.userIdentifier }}</span>
                                <a href="{{ path('app_logout') }}" class="btn btn-warning">Se d√©connecter</a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <form method="post" id="login-form" class="all-form">
                    <div class="spliter">
                        <div class="left">
                            <span class="form-group">
                                <label for="username">Email</label>
                                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required>

                                <div id="username-error" class="form-error" style="visibility:hidden;">&nbsp;</div>
                            </span>

                            <span class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div id="password-error" class="form-error" style="visibility:hidden;">&nbsp;</div>
                            </span>

                            <span class="forgot-password-btn" style="text-align:center; margin-top: 0.5rem;">
                                <a href="{{ path('forgot_password') }}" class="forgot-password-link">
                                    Mot de passe oubli√© ?
                                </a>
                            </span>

                            <span class="form-group switch-group inputs--filled">
                                <label for="_remember_me" class="switch-label">
                                    <label class="switch-text">Se souvenir de moi</label>
                                    <input type="checkbox" name="_remember_me" id="_remember_me" class="switch-input">
                                    <div class="switch-slider"></div>
                                </label>
                            </span>

                            <input class="btn btn-lg btn-primary" type="submit" value="Validez">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="cookie-consent" class="cookie-consent">
        <div class="cookie-content">
            <p>
                Ce site utilise des cookies essentiels pour le bon fonctionnement de la connexion et de la fonctionnalit√©:
            </p>
            <p><strong>"Se souvenir de moi"</strong></p>
            <p>En cliquant sur:</p>
            <p>"Accepter"</p>
            <p>vous consentez √† l'utilisation de tous les cookies. Vous pouvez:</p>
            <p>"Refuser"</p>
            <p>ou consulter notre</p>
            <div class="btn-menu" style="text-align: center; margin-bottom: 0.8rem"><a href="{{ path('confidentialite') }}">POLITIQUE DE CONFIDENTIALIT√â</a></div>
            <div class="cookie-actions">
                <button id="accept-cookies" class="btn-cookie accept">Accepter</button>
                <button id="refuse-cookies" class="btn-cookie refuse">Refuser</button>
            </div>
        </div>
        <button id="cookie-expand-btn" aria-label="R√©afficher les cookies">üç™</button>
    </div>
{% endblock %}
