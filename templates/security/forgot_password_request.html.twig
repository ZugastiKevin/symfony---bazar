{# templates/security/forgot_password_request.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ 'forgot_password'|trans }}{% endblock %}

{% block body %}
    <section id="form" class="form-background">
        <div class="form">
            <div class="form-content">
                <div class="mix">
                    <div class="headline">
                        <h3 class="text-headline">{{ 'forgot_password'|trans }}</h3>
                        <div class="text-subheadline">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                {{ form_start(requestForm, { attr: { class: 'all-form', id: 'forgot-password-form' } }) }}

                <div class="spliter">
                    <div class="left">
                         <span class="form-group">
                             {{ form_label(requestForm.email) }}
                             {{ form_widget(requestForm.email, { attr: { id: 'forgot_email' } }) }}
                             {{ form_errors(requestForm.email) }}

                            <div id="forgot_email-error" class="form-error" style="visibility:hidden;">&nbsp;</div>
                        </span>
                        <p style="text-align:center; font-size: 0.85rem; margin-bottom: 1.5rem;">
                            {{ 'form.forgot_password_text'|trans }}
                        </p>

                        <input class="btn btn-lg btn-primary" type="submit" value="{{ 'form.send_forgot'|trans }}">
                    </div>
                </div>

                {{ form_end(requestForm) }}
            </div>
        </div>
    </section>
{% endblock %}
