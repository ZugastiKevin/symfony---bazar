{% extends 'base.html.twig' %}

{% block title %}{{ 'home'|trans }}{% endblock %}

{% block body %}
    <div id="home" class="container">
        <div class="home">
            <div class="search-container">
                <form id="search-form"
                      hx-get="{{ path('search') }}"
                      hx-target="#results"
                      hx-swap="innerHTML"
                      hx-trigger="submit">
                    <input name="q" type="search" placeholder="Recherche..." required autocomplete="off" />
                    <button type="submit">Rechercher</button>
                    <span id="spinner" style="display:none;">Recherche...</span>
                </form>

                <div id="results" class="search-results-container">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
