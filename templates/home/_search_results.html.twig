{% if results is empty %}
    <div class="empty">Aucun résultat trouvé pour votre recherche.</div>
{% else %}
    <ul class="results-list">
        {% for item in results %}
            <li class="result-item">
                <div class="result-title">{{ item.name }}</div>
                {% if item.description %}
                    <div class="result-desc">{{ item.description }}</div>
                {% endif %}
                {% if item.category %}
                    <div class="result-cat">{{ item.category }}</div>
                {% endif %}
                {% if item.url %}
                    <div><a href="{{ item.url }}" target="_blank" rel="noopener">Voir</a></div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endif %}